[Unit]
Description=Gunicorn instance to serve ddmail_backup_receiver
After=network.target
StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
Environment="MODE=PRODUCTION"
User={{ ddmail_backup_receiver_runas_user }}
Group={{ ddmail_backup_receiver_runas_group }}
WorkingDirectory=/opt/ddmail_backup_receiver_venv/
Environment="PATH=/opt/ddmail_backup_receiver_venv/bin/"
ExecStart=/opt/ddmail_backup_receiver_venv/bin/gunicorn -b 127.0.0.1:8004 --log-file /var/log/gunicorn/ddmail_backup_receiver.log --workers 2 "backup_receiver:create_app()" 
RuntimeDirectory=ddmail_backup_receiver
Restart=on-failure
RestartSec=10s

# Prevent acquiring new privileges. Warning: breaks execution of SUID binaries
NoNewPrivileges=yes

# Use dedicated /tmp
PrivateTmp=yes

# Hide user homes
ProtectHome=yes

# Service may not create SUID/SGID files
RestrictSUIDSGID=yes

# Service may not create writable and executable memory mappings
MemoryDenyWriteExecute=yes

# Service may only use loopback network interface
PrivateNetwork=yes

# Create a filesystem jail with namespace
#TemporaryFileSystem=/:ro
BindReadOnlyPaths=/opt/ddmail_backup_receiver_venv /usr/bin/ls /usr/bin/python3.11 /usr/bin/python3 /lib/x86_64-linux-gnu /lib64 /usr/lib/python3.11
BindPaths=/var/log/gunicorn/ddmail_backup_receiver.log

# Deny all CAP
CapabilityBoundingSet=
AmbientCapabilities=

# System call filter
SystemCallFilter=@system-service

# Only allow network traffic on loopback.
IPAddressDeny=any
IPAddressAllow=127.0.0.0/8

[Install]
WantedBy=multi-user.target

