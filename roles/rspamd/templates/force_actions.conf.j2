rules {
  # For each condition we want to force an action on we define a rule
  PHISHING {
    action = "rewrite subject";
    expression = "(R_PHISHING | PHISHING)";
    subject = "*** PHISHING *** %s";
  }
  MALWARE {
    action = "rewrite subject";
    expression = "(CLAM_VIRUS | FPROT_VIRUS)";
    subject = "*** MALWARE *** %s";
  }
   RISKY_OFFICE_MACRO{
    action = "rewrite subject";
    expression = '^OLETOOLS.*$';
    subject = "*** RISKY OFFICE MACRO *** %s";
  }
}
