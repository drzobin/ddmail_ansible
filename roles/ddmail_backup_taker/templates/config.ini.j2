[DEFAULT]
save_backups_to = /root/backups
tmp_folder = /root/backups/tmp
folders_to_backup = {{ ddmail_backup_folders_to_backup }}
tar_bin = /usr/bin/tar
mariadbdump_bin = /usr/bin/mariadb-dump
days_to_save_backups = 7

[logging]
logfile = /var/log/ddmail_backup.log

[mariadb]
take_backup = True
databases = all
root_password = {{ mariadb_root_password }}

[backup_receiver]
use = Yes
url = {{ ddmail_backup_backup_receiver_url }}
password = {{ ddmail_backup_backup_receiver_password }} 

