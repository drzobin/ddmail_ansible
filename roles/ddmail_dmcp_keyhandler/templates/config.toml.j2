[PRODUCTION]
    SECRET_KEY = '{{ ddmail_dmcp_keyhandler_prod_secret_key }}'
    PASSWORD_HASH = '{{ ddmail_dmcp_keyhandler_prod_password_hash }}'
    DOVEADM_BIN = '/usr/bin/doveadm'
    [PRODUCTION.LOGGING]
        LOGLEVEL = 'INFO'
        LOG_TO_FILE = false
        LOGFILE = '/var/log/ddmail_dmcp_keyhandler.log'
        LOG_TO_SYSLOG = true
        SYSLOG_SERVER = '/dev/log'

