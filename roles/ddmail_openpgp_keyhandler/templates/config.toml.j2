[PRODUCTION]
    SECRET_KEY = '{{ ddmail_openpgp_keyhandler_prod_secret_key }}'
    PASSWORD_HASH = '{{ ddmail_openpgp_keyhandler_prod_password_hash }}'
    GPG_BINARY_PATH = '/usr/bin/gpg'
    TMP_FOLDER = '/opt/ddmail_openpgp_keyhandler/tmp'
    [PRODUCTION.LOGGING]
    LOGLEVEL = 'INFO'
    LOG_TO_FILE = false
    LOGFILE = '/var/log/ddmail_openpgp_keyhandler.log'
    LOG_TO_SYSLOG = true
    SYSLOG_SERVER = '/dev/log'

