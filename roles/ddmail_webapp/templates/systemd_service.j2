[Unit]
Description=Gunicorn instance to serve ddmail
After=network.target

[Service]
Environment="MODE=PRODUCTION"
User={{ ddmail_webapp_runas_user }}
Group={{ ddmail_webapp_runas_group }}
WorkingDirectory=/opt/ddmail_webapp_venv/
Environment="PATH=/opt/ddmail_webapp_venv/bin/"
ExecStart=/opt/ddmail_webapp_venv/bin/gunicorn -b 127.0.0.1:8000 --log-file /var/log/gunicorn/ddmail_webapp.log --workers 2 "ddmail:create_app()" 
RuntimeDirectory=ddmail_webapp

# Prevent acquiring new privileges. Warning: breaks execution of SUID binaries
NoNewPrivileges=yes

# Use dedicated /tmp
PrivateTmp=yes

# Hide user homes
ProtectHome=yes

# Service may not create SUID/SGID files
RestrictSUIDSGID=yes

# Service may not create writable and executable memory mappings
MemoryDenyWriteExecute=yes

# Service may only use loopback network interface
#PrivateNetwork=yes

# Create a filesystem jail with namespace
TemporaryFileSystem=/:ro
BindReadOnlyPaths=/opt/ddmail_webapp_venv /usr/bin/ls /usr/bin/python3.11 /usr/bin/python3 /lib/x86_64-linux-gnu /lib64 /usr/lib/python3.11 /run/mysqld/mysqld.sock
BindPaths=/var/log/gunicorn/ddmail_webapp.log

# Deny all CAP
CapabilityBoundingSet=
AmbientCapabilities=

# System call filter
SystemCallFilter=@system-service

[Install]
WantedBy=multi-user.target

